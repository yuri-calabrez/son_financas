<form action="{{ action }}" method="post">
    <div class="form-group">
        <label class="control-label">Categoria de custo</label>
        <select name="category_cost_id"class="form-control" value="{{bill.category_cost_id}}">
            {% for category in categories %}
                <option value="{{category.id}}"
                    {{bill.category_cost_id is not null and bill.category_cost_id == category.id ? ' selected="selected"' : ""}}>
                    {{category.name}}
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Data de Lan√ßamento</label>
        <input type="text" class="form-control" placeholder="DD/MM/YYYY" name="date_launch" value="{{bill.date_launch | date('d/m/Y')}}">    
    </div>
    <div class="form-group">
        <label class="control-label">Nome</label>
        <input type="text" class="form-control" placeholder="Nome" name="name" value="{{bill.name}}">    
    </div>
     <div class="form-group">
        <label class="control-label">Valor</label>
        <input type="text" class="form-control" placeholder="0.000,00" name="value" value="{{bill.value | number_format(2, ',', '.')}}">    
    </div>
    <button class="btn btn-primary btn-block" type="submit">
        <span class="glyphicon glyphicon-{{ submitIcon }}"></span>   
    </button>
</form> 